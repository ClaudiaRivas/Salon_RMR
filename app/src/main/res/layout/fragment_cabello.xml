<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.CabelloFragment">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@drawable/background">

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textGrid"
                android:text="Cabello"
                android:textSize="25sp"
                android:textColor="@color/primaryTextColor"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <!-- Columna 1 -->
            <android.support.v7.widget.CardView
                android:layout_marginRight="40dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/cardviewcabello"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="82dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pro10" />

                    <TextView
                        android:layout_width="82dp"
                        android:layout_height="match_parent"
                        android:text="Shampoo TRESemmé"
                        android:textColor="@color/primaryColor"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$15.00"
                        android:textAlignment="center"
                        android:textColor="@color/primaryColor"
                        android:textSize="13dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Columna 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/cardviewunas"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="82dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pro11" />

                    <TextView
                        android:layout_width="82dp"
                        android:layout_height="match_parent"
                        android:text="Acondiciona TRESemmé"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$15.00"
                        android:textAlignment="center"
                        android:textColor="@color/primaryColor"
                        android:textSize="13dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <!-- Fila 2 -->
            <!-- Columna 1 -->
            <android.support.v7.widget.CardView
                android:layout_marginRight="40dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/cardviewjoyeria"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="82dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pro12"/>

                    <TextView
                        android:layout_width="82dp"
                        android:layout_height="match_parent"
                        android:text="Espuma de cabello"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$15.00"
                        android:textAlignment="center"
                        android:textColor="@color/primaryColor"
                        android:textSize="13dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Columna 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/cardviewmaquillaje"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="82dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pro16" />

                    <TextView
                        android:layout_width="82dp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="@color/primaryColor"
                        android:gravity="center"
                        android:text="Tratamiento de Keratina"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$15.00"
                        android:textAlignment="center"
                        android:textColor="@color/primaryColor"
                        android:textSize="13dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>

