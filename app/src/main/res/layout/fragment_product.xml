<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentProducto"
    android:background="#f0f0f0">


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@drawable/background">
    
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textGrid"
            android:text="Productos"
            android:textSize="25sp"
            android:textColor="@color/primaryTextColor"
            android:layout_centerInParent="true"/>
        
    </RelativeLayout>


        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <!-- Columna 1 -->
            <android.support.v7.widget.CardView
                android:layout_marginRight="40dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/cardviewcabello"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/hair" />

                    <TextView
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:text="Cabello"
                        android:textColor="@color/primaryColor"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Columna 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/cardviewunas"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_unas" />

                    <TextView
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:text="UÃ±as"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <!-- Fila 2 -->
        <!-- Columna 1 -->
        <android.support.v7.widget.CardView
            android:layout_marginRight="40dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/cardviewjoyeria"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/jewerly"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Joyeria"
                    android:textAlignment="center"
                    android:textColor="@color/primaryColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Columna 2 -->
        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/cardviewmaquillaje"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/makeup2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/primaryColor"
                    android:textAlignment="center"
                    android:text="Maquillaje"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>